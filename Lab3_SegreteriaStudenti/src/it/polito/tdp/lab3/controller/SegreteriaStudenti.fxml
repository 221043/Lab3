                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <TextArea fx:id="txtRes">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
