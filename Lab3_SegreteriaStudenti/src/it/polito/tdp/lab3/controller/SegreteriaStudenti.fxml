            </TextArea>
            <Button fx:id="btnReset" mnemonicParsing="false" onAction="#doReset" text="Reset">
               <VBox.margin>
                  <Insets bottom="5.0" right="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
